<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
  <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
    
    <!-- Heading -->
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-2">
      Forgot your password?
    </h2>
    <p class="text-sm text-gray-500 text-center mb-6">
      Enter your email and weâ€™ll send you a reset link.
    </p>

    <!-- Error Messages -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      
      <div class="mb-5">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: "you@example.com",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2 focus:border-green-500 focus:ring-2 focus:ring-green-200 outline-none transition" %>
      </div>

      <div>
        <%= f.submit "Send reset instructions",
              class: "w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2.5 rounded-lg transition cursor-pointer" %>
      </div>

    <% end %>

    <!-- Links -->
    <div class="mt-6 text-center text-sm">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
