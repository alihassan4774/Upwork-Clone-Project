<div class="min-h-screen bg-white flex flex-col items-center"  data-controller="role-selector">



  <div class="flex flex-col items-center mt-20 w-full px-4">
    <h2 class="text-3xl font-semibold text-gray-900">
      Join as a client or freelancer
    </h2>

    <!-- üî• FORM START -->
    <form action="/register" method="get">

      <div class="flex gap-6 mt-10">

        <!-- CLIENT -->
        <label class="cursor-pointer">
        <input
          type="radio"
          name="user[role]"
          value="client"
          class="peer hidden role-radio"
          data-role-selector-target="radio"
/>
          <div
            class="w-72 p-6 border-2 border-gray-300 rounded-lg flex justify-between items-start
                   hover:border-gray-400
                   peer-checked:border-green-600 peer-checked:ring-2 peer-checked:ring-green-600">

            <div>
              <div class="text-xl">üë§</div>
              <p class="mt-4 text-lg font-medium text-gray-900">
                I'm a client, hiring for a project
              </p>
            </div>

           
          </div>
        </label>

        <!-- FREELANCER -->
        <label class="cursor-pointer">
          <input
            type="radio"
            name="user[role]"
            value="freelancer"
            class="peer hidden role-radio"
            data-role-selector-target="radio"
          />          

          <div
            class="w-72 p-6 border-2 border-gray-300 rounded-lg flex justify-between items-start
                   hover:border-gray-400
                   peer-checked:border-green-600 peer-checked:ring-2 peer-checked:ring-green-600">

            <div>
              <div class="text-xl">üßë‚Äçüíª</div>
              <p class="mt-4 text-lg font-medium text-gray-900">
                I'm a freelancer, looking for work
              </p>
            </div>

          
          </div>
        </label>

      </div>

      <!-- BUTTON -->
      <button
        id="createAccountBtn"
        disabled
        data-role-selector-target="button"
        class="mt-10 px-10 py-3 bg-gray-200 text-gray-400 rounded-full cursor-not-allowed transition">
        Create Account
      </button>

    </form>
    <!-- üî• FORM END -->

    <p class="mt-6 text-gray-600">
      Already have an account?
     <%= link_to "Log In", new_user_session_path, class: "text-green-600 hover:underline" %>
    </p>
  </div>
</div>



