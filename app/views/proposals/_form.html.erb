<%= form_with(model: [ @job, @proposal ]) do |form| %>

  <div class="max-w-2xl mx-auto bg-white border border-gray-200 rounded-2xl shadow-md p-6 space-y-6">

    <% if @proposal.errors.any? %>
      <div class="bg-red-50 text-red-600 px-4 py-3 rounded-lg">
        <h2 class="font-medium mb-2">
          <%= pluralize(@proposal.errors.count, "error") %> prohibited this proposal from being saved:
        </h2>
        <ul class="list-disc ml-5 space-y-1">
          <% @proposal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Cover Letter -->
    <div>
      <%= form.label :cover_letter, class: "block text-sm font-medium text-gray-600 mb-2" %>
      <%= form.text_area :cover_letter, rows: 5,
            class: "w-full px-4 py-2 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>

    <!-- Bid Amount -->
    <div>
      <%= form.label :bid_amount, class: "block text-sm font-medium text-gray-600 mb-2" %>
      <%= form.number_field :bid_amount,
            class: "w-full px-4 py-2 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>

    <!-- Estimated Time -->
    <div>
      <%= form.label :estimated_time, class: "block text-sm font-medium text-gray-600 mb-2" %>
      <%= form.text_field :estimated_time,
            placeholder: "e.g. 2 weeks",
            class: "w-full px-4 py-2 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500" %>
    </div>

    <div class="pt-2">
      <%= form.submit "Send Proposal",
            class: "w-full bg-green-600 hover:bg-green-700 text-white font-medium py-3 rounded-xl transition" %>
    </div>

  </div>

<% end %>
