<h2 class="text-3xl font-bold text-green-600 mb-6 text-center">Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full max-w-md mx-auto bg-white p-8 rounded shadow space-y-4" }) do |f| %>
  
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- Email Field -->
  <div class="field">
    <%= f.label :email, class: "block text-gray-700 font-medium" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded mt-1 focus:outline-none focus:ring-2 focus:ring-green-600" %>
  </div>

   <div class="field">
    <p><%= f.label :name %></p>
    <p><%= f.text_field :name %></p>
  </div>

  <!-- Password Field -->
  <div class="field">
    <%= f.label :password, class: "block text-gray-700 font-medium" %>
    <% if @minimum_password_length %>
      <p class="text-gray-500 text-sm mb-1">(<%= @minimum_password_length %> characters minimum)</p>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded mt-1 focus:outline-none focus:ring-2 focus:ring-green-600" %>
  </div>

  <!-- Password Confirmation Field -->
  <div class="field">
    <%= f.label :password_confirmation, class: "block text-gray-700 font-medium" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded mt-1 focus:outline-none focus:ring-2 focus:ring-green-600" %>
  </div>

  <!-- Submit Button -->
  <div class="actions">
    <%= f.submit "Sign Up", class: "w-full py-2 bg-green-600 text-white rounded hover:bg-green-700 transition" %>
  </div>

<% end %>

<!-- Devise Links -->
<div class="text-center mt-4 text-gray-600">
  <%= render "devise/shared/links" %>
</div>
