<%= form_with(model: job, class: "contents") do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul class="list-disc ml-6">
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="max-w-2xl mx-auto bg-white  rounded-xl p-6 space-y-5">

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :description, rows: 4, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div>
    <%= form.label :skills, "Skills (comma separated)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :skills, value: @job.skills.join(", "), rows: 5, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div>
    <%= form.label :budget, "Fixed Budget ($)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :budget, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div>
    <%= form.label :project_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :project_type, ["small", "medium", "large"], {}, class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div>
    <%= form.label :experience_level, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :experience_level, ["entry_level", "intermediate_level", "expert_level"], {}, class: "w-full border border-gray-300 rounded-lg px-3 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div>
    <%= form.label :deadline, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.date_field :deadline, class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" %>
  </div>

  <div class="pt-2">
    <%= form.submit "Post Job", class: "w-full bg-green-600 text-white font-medium py-2.5 rounded-lg hover:bg-green-700 transition" %>
  </div>

</div>


<% end %>
