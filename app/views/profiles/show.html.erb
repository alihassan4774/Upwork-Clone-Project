<div class="max-w-4xl mx-auto p-6">
  <div class="flex gap-6">
    <!-- Sidebar -->
    <%= render "settings" %>

    <!-- Main Content -->
    <div class="flex-1" data-controller="account">

      <!-- ================= ACCOUNT CARD ================= -->
      <div class="bg-white border border-gray-200 rounded-xl p-6 mb-6 relative">
        <button
          data-action="click->account#edit"
          class="absolute top-6 right-6 w-9 h-9 rounded-full border-2 border-green-600 flex items-center justify-center hover:bg-green-50">
          ‚úé
        </button>

        <h2 class="text-lg font-semibold text-gray-900 mb-4">Account</h2>

        <div class="flex items-start gap-6">
          <!-- Avatar -->
          <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden">
            <% if @profile.image.present? %>
              <%= image_tag @profile.image.url, width: "100%" %>
            <% else %>
              <span class="text-gray-400">No image</span>
            <% end %>
          </div>

          <!-- View Mode -->
          <div data-account-target="view">
            <div class="space-y-1">
              <p class="font-semibold text-gray-900">
                <%= @profile.first_name.presence || current_user.name || "Not set" %>
              </p>
              <p class="text-sm text-gray-600">Basic</p>

              <div class="flex gap-3 mt-3">
                <p class="text-sm text-gray-500">Name:</p>
                <p class="text-sm text-gray-900">
                  <%= @profile.first_name.presence || current_user.name %>
                </p>
              </div>

              <div class="flex gap-3 mt-3">
                <p class="text-sm text-gray-500">Email:</p>
                <p class="text-sm text-gray-900">
                  <%= @profile.email.presence || current_user.email %>
                </p>
              </div>
            </div>
          </div>

          <!-- Edit Mode -->
          <div data-account-target="edit" class="hidden flex-1">
            <%= form_with model: @profile, url: profile_path, method: :patch, local: true do |f| %>
              <div class="mb-3">
                <%= f.label :first_name, "First Name", class: "text-sm text-gray-500" %>
                <%= f.text_field :first_name,
                      value: @profile.first_name.presence || current_user.name,
                      class: "w-full border rounded-lg px-3 py-2" %>
              </div>

              <div class="mb-3">
                <%= f.label :email, class: "text-sm text-gray-500" %>
                <%= f.email_field :email,
                      value: @profile.email.presence || current_user.email,
                      class: "w-full border rounded-lg px-3 py-2" %>
              </div>

              <div class="flex gap-3">
                <button
                  type="button"
                  data-action="click->account#cancel"
                  class="px-4 py-2 border rounded-lg">
                  Cancel
                </button>

                <%= f.submit "Save",
                      class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 cursor-pointer" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- ================= COMPANY DETAILS ================= -->
      <div data-controller="company" class="bg-white border pb-20 border-gray-200 rounded-xl p-6 relative">
        <button
          data-action="click->company#edit"
          class="absolute top-6 right-6 w-9 h-9 rounded-full border-2 border-green-600 flex items-center justify-center hover:bg-green-50">
          ‚úé
        </button>

        <h2 class="text-lg font-semibold text-gray-900 mb-4">Company details</h2>

        <div class="flex items-start gap-6">
          <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
            üè¢
          </div>

          <div data-company-target="view" class="space-y-3">
            <div>
              <p class="text-sm text-gray-500">Company name</p>
              <p class="text-sm text-gray-900"><%= @profile.company_name.presence || "Not set" %></p>
            </div>

            <div>
              <p class="text-sm text-gray-500">Size</p>
              <p class="text-sm text-gray-900"><%= @profile.size.presence || "Not set" %></p>
            </div>

            <div>
              <p class="text-sm text-gray-500">bio</p>
              <p class="text-sm text-gray-900"><%= @profile.bio.presence || "Not set" %></p>
            </div>
          </div>

          <div data-company-target="edit" class="hidden flex-1">
            <%= form_with model: @profile, url: profile_path, method: :patch, local: true do |f| %>
              <div class="mb-3">
                <%= f.label :company_name, "Company Name", class: "text-sm text-gray-500" %>
                <%= f.text_field :company_name, class: "w-full border rounded-lg px-3 py-2" %>
              </div>

              <div class="mb-3">
                <%= f.label :size, "Company Size", class: "text-sm text-gray-500" %>
                <%= f.select :size,
                      options_for_select(
                        [
                          ["1-10 employees", "1-10"],
                          ["11-50 employees", "11-50"],
                          ["51-200 employees", "51-200"],
                          ["201-500 employees", "201-500"],
                          ["500+ employees", "500+"]
                        ],
                        @profile.size
                      ),
                      { include_blank: "Select size" },
                      class: "w-full border rounded-lg px-3 py-2" %>
              </div>

              <div class="mb-3">
                <%= f.label :bio, "Bio", class: "text-sm text-gray-500" %>
                <%= f.text_area :bio,
                      rows: 5,
                      placeholder: "Describe your company, goals, and the type of work you need‚Ä¶",
                      class: "w-full border rounded-lg px-3 py-2 resize-none" %>
              </div>

              <div class="flex gap-3">
                <button
                  type="button"
                  data-action="click->company#cancel"
                  class="px-4 py-2 border rounded-lg">
                  Cancel
                </button>

                <%= f.submit "Save",
                      class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 cursor-pointer" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- ================= COMPANY CONTACTS ================= -->
      <div data-controller="contacts" class="bg-white border border-gray-200 rounded-xl p-6 mb-6 relative">
        <button
          data-action="click->contacts#edit"
          class="absolute top-6 right-6 w-9 h-9 rounded-full border-2 border-green-600 flex items-center justify-center hover:bg-green-50">
          ‚úé
        </button>

        <h2 class="text-lg font-semibold text-gray-900 mb-6">Company contacts</h2>

        <div data-contacts-target="view" class="space-y-4 text-sm">
          <div>
            <p class="text-gray-500">Owner</p>
            <p class="text-gray-900 font-medium"><%= current_user.name || "Not set" %></p>
          </div>

          <div>
            <p class="text-gray-500">Phone</p>
            <p class="text-gray-900"><%= @profile.phone.presence || "‚Äî" %></p>
          </div>

          <div>
            <p class="text-gray-500">VAT ID</p>
            <p class="text-gray-900"><%= @profile.vat_id.presence || "‚Äî" %></p>
          </div>

          <div>
            <p class="text-gray-500">Time Zone</p>
            <p class="text-gray-900"><%= @profile.timezone.presence || "‚Äî" %></p>
          </div>

          <div>
            <p class="text-gray-500">Address</p>
            <p class="text-gray-900"><%= @profile.address.presence || "‚Äî" %></p>
          </div>
        </div>

        <div data-contacts-target="edit" class="hidden">
          <%= form_with model: @profile, url: profile_path, method: :patch, local: true do |f| %>
            <div class="space-y-4">
              <div>
                <%= f.label :phone, "Phone", class: "text-sm text-gray-500 block mb-1" %>
                <%= f.text_field :phone, class: "w-full border rounded-lg px-3 py-2" %>
              </div>

              <div>
                <%= f.label :vat_id, "VAT ID", class: "text-sm text-gray-500 block mb-1" %>
                <%= f.text_field :vat_id, class: "w-full border rounded-lg px-3 py-2" %>
              </div>

              <div>
                <%= f.label :timezone, "Time Zone", class: "text-sm text-gray-500 block mb-1" %>
                <%= f.select :timezone,
                      time_zone_options_for_select(@profile.timezone, nil, ActiveSupport::TimeZone),
                      { include_blank: "Select timezone" },
                      class: "w-full border rounded-lg px-3 py-2" %>
              </div>

              <div>
                <%= f.label :address, "Address", class: "text-sm text-gray-500 block mb-1" %>
                <%= f.text_area :address, rows: 3, class: "w-full border rounded-lg px-3 py-2" %>
              </div>
            </div>

            <div class="flex gap-3 mt-6">
              <button
                type="button"
                data-action="click->contacts#cancel"
                class="px-4 py-2 border rounded-lg">
                Cancel
              </button>

              <%= f.submit "Save",
                    class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 cursor-pointer" %>
            </div>
          <% end %>
        </div>
      </div>

