<nav class="bg-white border-b border-gray-200 px-6 py-4">
  <div class="flex items-center justify-between">
    <!-- Left Side -->
    <div class="flex items-center space-x-8">
      <!-- Logo -->
     <%= link_to "Upwork", logo_redirect_path, class: "text-2xl font-bold text-green-600" %>

      <!-- Navigation Links -->
      <div class="flex items-center space-x-6">
        <!-- Hire talent -->
        <button class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 font-medium">
          <span>Hire talent</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Manage work -->
        <button class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 font-medium">
          <span>Manage work</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Reports -->
        <button class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 font-medium">
          <span>Reports</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Messages -->
        <a href="/messages" class="text-gray-700 hover:text-gray-900 font-medium">Messages</a>
      </div>
    </div>

    <!-- Right Side -->
    <div class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <!-- Logged In User - Show Search, Talent, Icons, Avatar -->
        
        <!-- Search Bar -->
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input type="text" placeholder="Search" class="pl-10 pr-4 py-2 w-64 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-green-500 text-sm">
        </div>

        <!-- Talent Dropdown -->
        <button class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 font-medium">
          <span>Talent</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Help Icon -->
        <button class="text-gray-600 hover:text-gray-900">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </button>

        <!-- Notifications Icon -->
        <button class="text-gray-600 hover:text-gray-900">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </button>

        <!-- User Avatar with Dropdown -->
        <div class="relative" id="user-dropdown">
  <!-- Avatar button -->
  <button id="dropdown-button" class="flex items-center justify-center w-9 h-9 bg-teal-500 rounded-full text-white font-semibold hover:bg-teal-600">
    <%= current_user.email[0].upcase %>
  </button>

  <!-- Dropdown Menu -->
  <div id="dropdown-menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 z-50">
    <%= link_to "Profile", profile_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
    <%= link_to "Settings", profile_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
    <hr class="my-2">
    <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
  </div>
</div>


      <% else %>
        <!-- Not Logged In - Show Login and Sign Up Buttons -->
        
        <%= link_to "Log In", new_user_session_path, class: "text-gray-700 hover:text-gray-900 font-medium px-4 py-2" %>
        
        <%= link_to "Sign Up", select_role_path, class: "bg-green-600 hover:bg-green-700 text-white font-medium px-6 py-2 rounded-full transition duration-200" %>

      <% end %>
    </div>
  </div>
</nav>




<script>
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.getElementById("dropdown-button");
    const menu = document.getElementById("dropdown-menu");

    // Toggle dropdown on button click
    button.addEventListener("click", (e) => {
      e.stopPropagation(); // prevent immediate close
      menu.classList.toggle("hidden");
    });

    // Close dropdown if click outside
    document.addEventListener("click", () => {
      if (!menu.classList.contains("hidden")) {
        menu.classList.add("hidden");
      }
    });
  });
</script>
