          </div>


            <!-- Bio Field -->
          <div class="mb-3">
            <%= f.label :bio, "Bio", class: "text-sm text-gray-500" %>
            <%= f.text_area :bio,
                rows: 5,
                placeholder: "Describe your company, goals, and the type of work you need‚Ä¶",
                class: "w-full border rounded-lg px-3 py-2 resize-none" %>
          </div>

          <div class="flex gap-3">
            <button type="button"
              onclick="cancelCompanyEdit()"
              class="px-4 py-2 border rounded-lg">
              Cancel
            </button>

            <%= f.submit "Save",
                  class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 cursor-pointer" %>
          </div>

        <% end %>
      </div>

    </div>
