<div class="min-h-screen flex flex-col items-center justify-center bg-gray-50 px-4">
  <!-- Logo -->
   <div class="mb-8">
    <% if @profile&.image.present? %>
      <%= image_tag @profile.image.url, width: "100%", class: "h-16 w-26 rounded-full" %>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <circle cx="12" cy="12" r="10" stroke-width="2" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2" />
      </svg>
    <% end %>
  </div>


  <!-- Heading -->
  <h1 class="text-4xl font-bold text-gray-900 text-center mb-4">
    Welcome, <%= current_user.name %>!
  </h1>
  <p class="text-lg text-gray-700 text-center mb-8">
    Let's start with your first job post.
  </p>

  <!-- Buttons -->
  <div class="flex flex-col space-y-4 w-full max-w-xs">
   <%= link_to "Post a Job", new_job_path,  class: "bg-green-600 text-white text-center py-3 rounded-lg font-semibold hover:bg-green-700 transition"%>
   
    <a href="#" class="text-green-600 text-center py-3 rounded-lg font-semibold hover:underline transition">
      I'll do it later
    </a>
  </div>

 
</div>

