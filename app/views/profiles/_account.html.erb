<div class="flex-1" data-controller="account">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">My Info</h1>
  <p class="text-gray-600 mb-8">This is a client account</p>

  <div class="bg-white border border-gray-200 rounded-xl p-8 mb-6 relative">

    <!-- Edit Button -->
    <button
      type="button"
      data-action="click->account#edit"
      class="absolute top-6 right-6 w-10 h-10 rounded-full border-2 border-green-600
             flex items-center justify-center hover:bg-green-50 transition">
      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
      </svg>
    </button>

    <h2 class="text-xl font-semibold text-gray-900 mb-6">Account</h2>

    <div class="flex items-start gap-6">

      <!-- Avatar -->
      <div class="flex-shrink-0">
        <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden">
          <% if @profile.image.present? %>
            <%= image_tag @profile.image.url, class: "w-full h-full object-cover" %>
          <% else %>
            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          <% end %>
        </div>
      </div>

      <!-- View Mode -->
      <div data-account-target="view" class="flex-1">
        <div class="mb-4">
          <p class="text-2xl font-semibold text-gray-900 mb-1">
            <%= current_user.email.split('@').first.capitalize %>
          </p>
          <p class="text-sm text-gray-500">Basic</p>
        </div>

        <div class="mb-4">
          <p class="text-lg font-medium text-gray-900">
            <%= @profile.first_name.presence || current_user.name || "Not set" %>
          </p>
        </div>

        <div>
          <p class="text-sm text-gray-600 mb-1">Email</p>
          <p class="text-sm text-gray-900">
            <%= @profile.email.presence || current_user.email %>
          </p>
        </div>
      </div>

      <!-- Edit Form (Hidden by default) -->
      <div data-account-target="edit" class="hidden flex-1">
        <%= form_with model: @profile, url: profile_path, method: :patch, class: "space-y-4" do |f| %>

          <div>
            <%= f.label :first_name, "Full Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_field :first_name, 
                value: @profile.first_name.presence || current_user.name,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-green-500 focus:border-transparent",
                placeholder: "Enter your name" %>
          </div>

          <div>
            <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.email_field :email, 
                value: @profile.email.presence || current_user.email,
                class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-green-500 focus:border-transparent",
                placeholder: "your@email.com" %>
          </div>

          <div class="flex gap-3 pt-2">
            <button
              type="button"
              data-action="click->account#cancel"
              class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition font-medium">
              Cancel
            </button>

            <%= f.submit "Save Changes",
              class: "px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium" %>
          </div>

        <% end %>
      </div>

    </div>
  </div>
</div>