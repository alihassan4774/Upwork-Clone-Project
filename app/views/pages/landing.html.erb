<div class="min-h-screen w-full bg-gray-50">

<nav class="flex items-center justify-between px-10 py-5 bg-white shadow">
  <h1 class="text-2xl font-bold text-green-600">Upwork</h1>

  <div class="space-x-4">
    <% if current_user %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 text-gray-800" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "px-4 py-2 text-gray-600 hover:text-black" %>
      <%= link_to "Sign Up", select_role_path, class: "px-4 py-2 text-white bg-green-600 rounded hover:bg-green-700" %>
    <% end %>
  </div>
</nav>


  <!-- Hero Section -->
  <section class="flex flex-col items-center justify-center px-6 py-24 text-center">
    <h2 class="max-w-3xl text-4xl font-bold text-gray-900 md:text-5xl">
      Connecting businesses with freelancers who deliver
    </h2>

    <p class="max-w-xl mt-6 text-lg text-gray-600">
      Hire experts for your next project and get work done faster.
    </p>

    <div class="mt-10">
      <a href="#" class="px-8 py-3 text-lg text-white bg-green-600 rounded-lg hover:bg-green-700">
        Get Started
      </a>
    </div>
  </section>
</div>

