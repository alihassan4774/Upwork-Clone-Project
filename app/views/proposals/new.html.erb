<% content_for :title, "New proposal" %>

<div class="max-w-3xl mx-auto px-4 py-8">

  <!-- Heading -->
  <h1 class="text-3xl font-bold text-gray-800 mb-6">New Proposal</h1>

  <!-- Form Section -->
  <div class="bg-white  rounded-2xl  p-6 mb-6">
    <%= render "form", proposal: @proposal %>
  </div>

  <!-- Back Link -->
  <div>
    <%= link_to "Back to proposals",
        job_path(@job),
        class: "inline-block px-4 py-2 rounded-lg bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition" %>
  </div>

</div>
