


<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">My Info</h1>
  
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= alert %>
    </div>
  <% end %>
  
  <div class="flex gap-6">
    <!-- Sidebar -->
    <div class="w-64">
      <ul class="space-y-2 text-sm">
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Billing & Payments</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Password & Security</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Teams & Members</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Membership</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Identity Verification</li>
      </ul>
    </div>
    
    <!-- Main Content -->

    <!-- Account Card -->
    <div class="flex-1">
    <div class="bg-white border border-gray-200 rounded-xl p-6 mb-6 relative">

    <!-- Edit Button -->
    <button onclick="openEditAccount()" class="absolute top-6 right-6 w-9 h-9 rounded-full border-2 border-green-600 flex items-center justify-center hover:bg-green-50">
      ‚úé
    </button>

    <h2 class="text-lg font-semibold text-gray-900 mb-4">Account</h2>

    <div class="flex items-start gap-6">

      <!-- Avatar -->
      <div class="w-20 h-20 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden">
     <% if @profile.image.present? %>
     <%= image_tag @profile.image.url, width: "100%" %>
     <% else %>
       <span class="text-gray-400">No image</span>
     <% end %>
      </div>
 
  


      <!-- Info -->
      <div id="account-view">
        <div class="space-y-1">
          <p class="font-semibold text-gray-900"><%= @profile.first_name.presence || current_user.name || "Not set" %></p>
          <p class="text-sm text-gray-600">Basic</p>

          <div class="flex gap-3 mt-3">
            <p class="text-sm text-gray-500">Name:</p>
            <p class="text-sm text-gray-900"><%= @profile.first_name.presence || current_user.name %></p>
          </div>

          <div class="flex gap-3 mt-3">
            <p class="text-sm text-gray-500">Email:</p>
            <p class="text-sm text-gray-900"><%= @profile.email.presence || current_user.email %></p>
          </div>
          
          
          
          
        </div>
      </div>

      <!-- Edit Form (Hidden by default) -->
      <div id="account-edit" class="hidden flex-1">
        <%= form_with model: @profile, url: profile_path, method: :patch, local: true do |f| %>

          <div class="mb-3">
            <%= f.label :first_name, "First Name", class: "text-sm text-gray-500" %>
            <%= f.text_field :first_name,
                value: @profile.first_name.presence || current_user.name,
                class: "w-full border rounded-lg px-3 py-2" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "text-sm text-gray-500" %>
            <%= f.email_field :email,
                value: @profile.email.presence || current_user.email,
                class: "w-full border rounded-lg px-3 py-2" %>
          </div>
          
         
          
         

          <div class="flex gap-3">
            <button type="button"
              onclick="openCancelAccountEdit()"
              class="px-4 py-2 border rounded-lg">
              Cancel
            </button>

            <%= f.submit "Save",
                  class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 cursor-pointer" %>
          </div>

        <% end %>
      </div>

    </div>
</div>



<script>
 function editAccount() {
   document.getElementById("account-view").classList.add("hidden");
  document.getElementById("account-edit").classList.remove("hidden");
 }

 function cancelAccountEdit() {
   document.getElementById("account-edit").classList.add("hidden");
   document.getElementById("account-view").classList.remove("hidden");
 }


import {openEditAccount} from "javascript/account_model"
import {openCancelAccountEdit} from "javascript/account_model"
</script> 



