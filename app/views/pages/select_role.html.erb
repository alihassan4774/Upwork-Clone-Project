<div class="min-h-screen bg-white flex flex-col items-center">



  <div class="flex flex-col items-center mt-20 w-full px-4">
    <h2 class="text-3xl font-semibold text-gray-900">
      Join as a client or freelancer
    </h2>

    <!-- üî• FORM START -->
    <form action="/register" method="get">

      <div class="flex gap-6 mt-10">

        <!-- CLIENT -->
        <label class="cursor-pointer">
          <input
            type="radio"
            name="user[role]"
            value="client"
            class="peer hidden role-radio"
          />

          <div
            class="w-72 p-6 border-2 border-gray-300 rounded-lg flex justify-between items-start
                   hover:border-gray-400
                   peer-checked:border-green-600 peer-checked:ring-2 peer-checked:ring-green-600">

            <div>
              <div class="text-xl">üë§</div>
              <p class="mt-4 text-lg font-medium text-gray-900">
                I'm a client, hiring for a project
              </p>
            </div>

           
          </div>
        </label>

        <!-- FREELANCER -->
        <label class="cursor-pointer">
          <input
            type="radio"
            name="user[role]"
            value="freelancer"
            class="peer hidden role-radio"
          />

          <div
            class="w-72 p-6 border-2 border-gray-300 rounded-lg flex justify-between items-start
                   hover:border-gray-400
                   peer-checked:border-green-600 peer-checked:ring-2 peer-checked:ring-green-600">

            <div>
              <div class="text-xl">üßë‚Äçüíª</div>
              <p class="mt-4 text-lg font-medium text-gray-900">
                I'm a freelancer, looking for work
              </p>
            </div>

          
          </div>
        </label>

      </div>

      <!-- BUTTON -->
      <button
        id="createAccountBtn"
        disabled
        class="mt-10 px-10 py-3 bg-gray-200 text-gray-400 rounded-full cursor-not-allowed transition">
        Create Account
      </button>

    </form>
    <!-- üî• FORM END -->

    <p class="mt-6 text-gray-600">
      Already have an account?
      <a href="/users/sign_in" class="text-green-600 hover:underline">Log In</a>
    </p>
  </div>
</div>

<script>
  const radios = document.querySelectorAll('.role-radio');
  const button = document.getElementById('createAccountBtn');

  radios.forEach(radio => {
    radio.addEventListener('change', () => {
      button.disabled = false;

      button.classList.remove(
        'bg-gray-200',
        'text-gray-400',
        'cursor-not-allowed'
      );

      button.classList.add(
        'bg-green-600',
        'text-white',
        'cursor-pointer'
      );
    });
  });
</script>
