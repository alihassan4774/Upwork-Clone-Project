<!-- app/views/freelancer_profiles/new.html.erb -->
<div class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded-lg shadow">
  <h1 class="text-2xl font-bold mb-6">Create Your Freelancer Profile</h1>
  
  <%= form_with model: @freelancer_profile, url: freelancer_profiles_path, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :skills, class: "block text-sm font-medium" %>
      <%= f.text_area :skills, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
    
    <div>
      <%= f.label :hourly_rate, class: "block text-sm font-medium" %>
      <%= f.number_field :hourly_rate, step: 0.01, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
    
    <div>
      <%= f.label :portfolio_url, class: "block text-sm font-medium" %>
      <%= f.url_field :portfolio_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
    
    <%= f.submit "Create Profile", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  <% end %>
</div>