          <%= f.label :experience_title, "Job Title", class: "text-sm text-gray-500" %>
          <%= f.text_field :experience_title,
                class: "w-full border rounded-lg px-3 py-2" %>
        </div>

        <div class="mb-3">
          <%= f.label :experience_company, "Company", class: "text-sm text-gray-500" %>
