<% content_for :title, "Editing job" %>

<div class="max-w-3xl mx-auto px-4 py-8">

  <!-- Page Heading -->
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Editing Job</h1>

  <!-- Form Card -->
  <div class="bg-white border border-gray-200 rounded-2xl shadow-md p-6 mb-6">
    <%= render "form", job: @job %>
  </div>

  <!-- Navigation Buttons -->
  <div class="flex flex-wrap gap-3">
    <%= link_to "Show this job",
        @job,
        class: "px-4 py-2 rounded-lg bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition" %>

    <%= link_to "Back to jobs",
        jobs_path,
        class: "px-4 py-2 rounded-lg bg-gray-100 text-gray-700 font-medium hover:bg-gray-200 transition" %>
  </div>

</div>
