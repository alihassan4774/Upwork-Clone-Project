<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-gray-100 px-4">
  <div class="w-full max-w-sm bg-white rounded-2xl shadow-xl p-8 space-y-6">

    <!-- Title -->
    <div class="text-center space-y-1">
      <h2 class="text-3xl font-extrabold text-green-600">Log in to Upwork</h2>
    </div>


    <!-- Devise Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          placeholder: "you@example.com",
          class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900
                 focus:border-green-600 focus:ring-2 focus:ring-green-600/30
                 transition duration-200" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
          autocomplete: "current-password",
          placeholder: "••••••••",
          class: "w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900
                 focus:border-green-600 focus:ring-2 focus:ring-green-600/30
                 transition duration-200" %>
      </div>

      <!-- Remember Me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between text-sm">
          <label class="flex items-center gap-2 text-gray-700">
            <%= f.check_box :remember_me,
              class: "h-4 w-4 rounded border-gray-300 text-green-600  focus:ring-green-500" %>
            Remember me
          </label>
        </div>
      <% end %>

      <!-- Submit -->
      <div>
        <%= f.submit "Log In",
          class: "w-full rounded-xl bg-green-600 py-3 text-white font-semibold
                 hover:bg-green-700 active:scale-[0.98]
                 shadow-lg hover:shadow-xl transition-all duration-200" %>
      </div>

    <% end %>

    <!-- Devise Links -->
    <div class="text-center text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
