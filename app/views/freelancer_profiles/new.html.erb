<div class="min-h-screen bg-gray-50 py-12 px-4">
  <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-8">

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Create your freelancer profile
      </h1>
      <p class="text-gray-600">
        This information helps clients understand your skills and pricing.
      </p>
    </div>

    <!-- Form -->
    <%= form_with model: @profile, 
                  url: profile_path,
                   html: { multipart: true },
                  class: "space-y-6" do |f| %>


                   <div class="mb-4">
            <%= f.file_field :image,
              class: "block w-full text-sm text-gray-800
                border border-gray-300 rounded-md
                bg-white
                focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500
                file:mr-3 file:py-2 file:px-4
                file:rounded-md
                file:border-0
                file:text-sm file:font-medium
                file:bg-green-50 file:text-green-700
                hover:file:bg-green-100
                transition" %>
        </div>

      <!-- Skills -->


<div class="mb-4">
  <%= f.label :skills, "Skills", class: "block text-sm font-semibold text-gray-700 mb-1" %>
  <%= f.text_area :skills,
        value: @profile.skills&.join(', '),
        rows: 3,
        placeholder: "e.g. Ruby on Rails, JavaScript, PostgreSQL, Tailwind CSS",
        class: "w-full rounded-lg border border-gray-300 px-4 py-2
                focus:border-green-500 focus:ring-2 focus:ring-green-200
                outline-none transition" %>
  <p class="text-xs text-gray-500 mt-1">Separate skills with commas</p>
</div>

     

      <!-- Education -->
<div class="space-y-4">

  <!-- Degree -->
  <h1 class="font-semibold" >Education</h1>
  <div>
    <%= f.label :degree,
          class: "block text-sm font-semibold text-gray-700 mb-1" %>

    <%= f.text_field :degree,
          placeholder: "e.g. BS Information Technology",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2
                  focus:border-green-500 focus:ring-2 focus:ring-green-200
                  outline-none transition" %>
  </div>

  <!-- University -->
  <div>
    <%= f.label :university,
          class: "block text-sm font-semibold text-gray-700 mb-1" %>

    <%= f.text_field :university,
          placeholder: "e.g. University of Lahore",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2
                  focus:border-green-500 focus:ring-2 focus:ring-green-200
                  outline-none transition" %>
  </div>

  <!-- Completion Year -->
  <div>
    <%= f.label :complete_year, "Completion Year",
          class: "block text-sm font-semibold text-gray-700 mb-1" %>

    <%= f.text_field :complete_year,
          placeholder: "e.g. 2026",
          class: "w-full rounded-lg border border-gray-300 px-4 py-2
                  focus:border-green-500 focus:ring-2 focus:ring-green-200
                  outline-none transition" %>
  </div>

</div>



<!-- Experience -->
<!-- Experience Title -->
<h1 class="font-semibold" >Experience</h1>
<div>
  <%= f.label :experience_title, "Job Title",
        class: "block text-sm font-semibold text-gray-700 mb-1" %>
  <%= f.text_field :experience_title,
        placeholder: "e.g. Frontend Developer",
        class: "w-full rounded-lg border border-gray-300 px-4 py-2
                focus:border-green-500 focus:ring-2 focus:ring-green-200
                outline-none transition" %>
</div>

<!-- Experience Company -->
<div>
  <%= f.label :experience_company, "Company",
        class: "block text-sm font-semibold text-gray-700 mb-1" %>
  <%= f.text_field :experience_company,
        placeholder: "e.g. ABC Software House",
        class: "w-full rounded-lg border border-gray-300 px-4 py-2
                focus:border-green-500 focus:ring-2 focus:ring-green-200
                outline-none transition" %>
</div>

<!-- Experience Duration -->
<div>
  <%= f.label :experience_duration, "Duration",
        class: "block text-sm font-semibold text-gray-700 mb-1" %>
  <%= f.text_field :experience_duration,
        placeholder: "e.g. Jan 2023 â€“ Dec 2024",
        class: "w-full rounded-lg border border-gray-300 px-4 py-2
                focus:border-green-500 focus:ring-2 focus:ring-green-200
                outline-none transition" %>
</div>

<!-- Experience Description -->
<div>
  <%= f.label :experience_description, "Description",
        class: "block text-sm font-semibold text-gray-700 mb-1" %>
  <%= f.text_area :experience_description,
        rows: 3,
        class: "w-full rounded-lg border border-gray-300 px-4 py-2
                focus:border-green-500 focus:ring-2 focus:ring-green-200
                outline-none transition" %>
</div>



 <!-- Fixed Price -->
      <div>
        <%= f.label :fixed_price, "Starting price ($)",
              class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.number_field :fixed_price,
              step: 0.01,
              placeholder: "100",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2
                      focus:border-green-500 focus:ring-2 focus:ring-green-200
                      outline-none transition" %>
      </div>

      <!-- Portfolio URL -->
      <div>
        <%= f.label :portfolio_url, class: "block text-sm font-semibold text-gray-700 mb-1" %>
        <%= f.url_field :portfolio_url,
              placeholder: "https://yourportfolio.com",
              class: "w-full rounded-lg border border-gray-300 px-4 py-2
                      focus:border-green-500 focus:ring-2 focus:ring-green-200
                      outline-none transition" %>
      </div>

      <!-- Submit -->
      <div class="pt-4">
        <%= f.submit "Create profile",
              class: "w-full bg-green-600 hover:bg-green-700 text-white
                      font-semibold py-3 rounded-xl
                      focus:ring-4 focus:ring-green-200 transition cursor-pointer" %>
      </div>

    <% end %>

  </div>
</div>
