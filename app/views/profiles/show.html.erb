<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">My Info</h1>
  
  <!-- Flash Messages -->
  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= notice %>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= alert %>
    </div>
  <% end %>
  
  <div class="flex gap-6">
    <!-- Sidebar -->
    <div class="w-64">
      <ul class="space-y-2 text-sm">
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Billing & Payments</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Password & Security</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Teams & Members</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Membership</li>
        <li class="text-gray-700 hover:text-gray-900 cursor-pointer">Identity Verification</li>
      </ul>
    </div>
    
    <!-- Main Content -->
    <div class="flex-1">
      <!-- Account Card -->
      <%= render 'account' %>
      
      <!-- Company Details Card -->
      <%= render 'company_details' %>
      
      <!-- Company Contacts Card -->
      <%= render 'contact_card_company' %>
      
      <!-- AI Preference Card -->
      <%= render 'ai_preference_card' %>
    </div>
  </div>
</div>